# Block direct HTTP access to JavaScript files
# Files can only be accessed through script.php (which uses filesystem access)

# Deny all direct access to .js files
<FilesMatch "\.js$">
    <IfModule mod_authz_core.c>
        # Apache 2.4+
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        # Apache 2.2
        Order Deny,Allow
        Deny from all
    </IfModule>
</FilesMatch>

# Custom error page for 403 errors
ErrorDocument 403 403.php

# Block directory listing
Options -Indexes
